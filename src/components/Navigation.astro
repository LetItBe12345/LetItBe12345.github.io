---
import ThemeToggle from './ThemeToggle.jsx';

const currentPath = Astro.url.pathname;
const base = import.meta.env.BASE_URL;
const navItems = [
  { href: base, label: 'Home' },
  { href: `${base}publications/`, label: 'Publications' },
  { href: `${base}news/`, label: 'News' },
  { href: `${base}cv/`, label: 'CV' },
  { href: `${base}repositories/`, label: 'Repositories' }
];
---

<nav class="sticky top-0 z-50 bg-white/80 dark:bg-gray-900/80 backdrop-blur-sm border-b border-gray-200 dark:border-gray-700">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <div class="flex-shrink-0">
        <a href={base} class="text-xl font-bold text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 transition-colors">
          Guanghao Jin
        </a>
      </div>
      
      <div class="hidden md:block">
        <div class="ml-10 flex items-baseline space-x-8">
          {navItems.map(({ href, label }) => (
            <a
              href={href}
              class={`px-3 py-2 rounded-md text-sm font-medium transition-colors ${
                currentPath === href
                  ? 'bg-primary-100 dark:bg-primary-900 text-primary-700 dark:text-primary-300'
                  : 'text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 hover:bg-gray-100 dark:hover:bg-gray-800'
              }`}
            >
              {label}
            </a>
          ))}
        </div>
      </div>

      <div class="flex items-center space-x-4">
        <ThemeToggle client:load />
        <button id="mobile-menu-button" class="md:hidden p-2 rounded-md text-gray-600 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white hover:bg-gray-100 dark:hover:bg-gray-700">
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile menu -->
    <div id="mobile-menu" class="hidden md:hidden pb-3">
      <div class="px-2 pt-2 pb-3 space-y-1">
        {navItems.map(({ href, label }) => (
          <a
            href={href}
            class={`block px-3 py-2 rounded-md text-base font-medium transition-colors ${
              currentPath === href
                ? 'bg-primary-100 dark:bg-primary-900 text-primary-700 dark:text-primary-300'
                : 'text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 hover:bg-gray-100 dark:hover:bg-gray-800'
            }`}
          >
            {label}
          </a>
        ))}
      </div>
    </div>
  </div>
</nav>

<script>
  document.addEventListener('astro:page-load', () => {
    const menuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');

    if (menuButton && mobileMenu) {
      menuButton.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
      });
    }
  });
</script>