---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

// GitHub API integration - fetch at build time only
let repositories = [];
const GITHUB_USERNAME = 'LetItBe12345';

try {
  const response = await fetch(`https://api.github.com/users/${GITHUB_USERNAME}/repos?sort=updated&per_page=20`);
  if (response.ok) {
    const repos = await response.json();
    repositories = repos.filter(repo => !repo.private && !repo.fork);
  }
} catch (error) {
  console.warn('Could not fetch GitHub repositories:', error.message);
}
---

<Layout title="Repositories - Dr. Your Name">
  <Navigation />
  
  <main class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="mb-12">
      <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">Repositories</h1>
      <p class="text-lg text-gray-600 dark:text-gray-400">
        Open source projects and research code repositories available on GitHub.
      </p>
    </div>

    {repositories.length === 0 && (
      <div class="text-center py-12">
        <p class="text-gray-500 dark:text-gray-400 mb-4">
          No repositories found. Make sure to update the GitHub username in the code.
        </p>
        <p class="text-sm text-gray-400 dark:text-gray-500">
          Current username: <code>{GITHUB_USERNAME}</code>
        </p>
      </div>
    )}

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {repositories.map((repo) => {
        const updatedDate = new Date(repo.updated_at).toLocaleDateString('en-US', { 
          year: 'numeric', 
          month: 'short', 
          day: 'numeric' 
        });
        
        return (
          <div class="bg-white dark:bg-gray-800 p-6 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 hover:shadow-md transition-shadow">
            <div class="flex items-start justify-between mb-4">
              <h2 class="text-lg font-semibold text-gray-900 dark:text-white leading-tight">
                <a
                  href={repo.html_url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="hover:text-primary-600 dark:hover:text-primary-400 transition-colors"
                >
                  {repo.name}
                </a>
              </h2>
              {repo.stargazers_count > 0 && (
                <div class="flex items-center text-yellow-500 text-sm">
                  <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                  {repo.stargazers_count}
                </div>
              )}
            </div>
            
            <p class="text-gray-600 dark:text-gray-400 mb-4 text-sm leading-relaxed h-12 overflow-hidden">
              {repo.description || 'No description available.'}
            </p>
            
            <div class="flex items-center justify-between mb-4">
              {repo.language && (
                <div class="flex items-center">
                  <div class={`w-3 h-3 rounded-full mr-2 ${
                    repo.language === 'Python' ? 'bg-blue-500' :
                    repo.language === 'JavaScript' ? 'bg-yellow-500' :
                    repo.language === 'TypeScript' ? 'bg-blue-600' :
                    repo.language === 'C++' ? 'bg-red-500' :
                    repo.language === 'Java' ? 'bg-orange-500' :
                    'bg-gray-500'
                  }`}></div>
                  <span class="text-sm text-gray-600 dark:text-gray-400">{repo.language}</span>
                </div>
              )}
            </div>
            
            <div class="flex items-center justify-between text-xs text-gray-500 dark:text-gray-400">
              <span>Updated {updatedDate}</span>
              <div class="flex items-center space-x-4">
                {repo.forks_count > 0 && (
                  <div class="flex items-center">
                    <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 16 16">
                      <path fill-rule="evenodd" d="M5 3.25a.75.75 0 11-1.5 0 .75.75 0 011.5 0zm0 2.122a2.25 2.25 0 10-1.5 0v.878A2.25 2.25 0 005.75 8.5h1.5v2.128a2.251 2.251 0 101.5 0V8.5h1.5a2.25 2.25 0 002.25-2.25v-.878a2.25 2.25 0 10-1.5 0v.878a.75.75 0 01-.75.75h-4.5A.75.75 0 015 6.25v-.878z"/>
                    </svg>
                    {repo.forks_count}
                  </div>
                )}
              </div>
            </div>
          </div>
        );
      })}
    </div>

    {repositories.length > 0 && (
      <div class="mt-12 text-center">
        <a
          href={`https://github.com/${GITHUB_USERNAME}`}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center bg-gray-900 dark:bg-white text-white dark:text-gray-900 px-6 py-3 rounded-lg hover:bg-gray-800 dark:hover:bg-gray-100 transition-colors font-medium"
        >
          <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z" clip-rule="evenodd"/>
          </svg>
          View all repositories on GitHub
        </a>
      </div>
    )}
  </main>

  <Footer />
</Layout>